{
  "preset": "ts-jest",
  "globals": {
    "ts-jest": {
      "isolatedModules": true
    }
  },
  "transform": {
    "^.+\\.(t|j)sx?$": [
      "@swc/jest",
      {
        "sourceMaps": "inline",
        "jsc": {
          "parser": {
            "syntax": "typescript",
            "decorators": true
          },
          "target": "es2022"
        }
      }
    ]
  },
  "setupFilesAfterEnv": ["@alex_neo/jest-expect-message"]
}
