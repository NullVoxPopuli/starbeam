{
  "preset": "ts-jest/presets/default-esm",
  "extensionsToTreatAsEsm": [".ts", ".tsx"],
  "testEnvironment": "./jest/environment.js",
  "resolver": "jest-ts-webcompat-resolver",
  "injectGlobals": false,
  "globals": {
    "ts-jest": {
      "useESM": true
    }
  },
  "transform": {
    "^.+\\.(t|j)sx?$": [
      "@swc/jest",
      {
        "module": {
          "type": "es6",
          "noInterop": true
        },

        "jsc": {
          "parser": {
            "syntax": "typescript",
            "decorators": true
          },
          "target": "es2022"
        }
      }
    ]
  }
}
