{
  "collectCoverage": false,
  "preset": "ts-jest/presets/default-esm",
  "cacheDirectory": "./.jest.cache",
  "extensionsToTreatAsEsm": [".ts", ".tsx"],
  "testEnvironment": "./bootstrap/dist/environment.js",

  "resolver": "jest-ts-webcompat-resolver",
  "injectGlobals": true,
  "globals": {
    "ts-jest": {
      "useESM": true
    }
  },
  "transform": {
    "^.+\\.(t|j)sx?$": [
      "@swc-node/jest",
      {
        "swc": {
          "sourceMaps": "inline",
          "module": {
            "type": "es6",
            "noInterop": true
          },

          "jsc": {
            "parser": {
              "syntax": "typescript",
              "decorators": true
            },
            "target": "es2022"
          }
        }
      }
    ]
  }
}
