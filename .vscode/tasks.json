{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "type": "typescript",
      "label": "typecheck",
      "tsconfig": "tsconfig.json",
      "option": "watch",
      "isBackground": true,
      "problemMatcher": ["$tsc-watch"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    // {
    //   "type": "npm",
    //   "script": "typecheck:serve",
    //   "isBackground": true,
    //   "label": "typecheck",
    //   "options": {},
    //   "problemMatcher": "$tsc-watch",
    //   "group": {
    //     "kind": "build",
    //     "isDefault": true
    //   }
    // },
    {
      "type": "npm",
      "script": "lint",
      "problemMatcher": ["$eslint-stylish"],
      "label": "eslint",
      "presentation": {
        "echo": true,
        "reveal": "never",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    }
  ]
}
