{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "command": "pnpm",
      "args": [
        "check:types"
      ],
      "problemMatcher": [
        "$tsc"
      ],
      "label": "check:types"
    },
    {
      "type": "shell",
      "command": "pnpm",
      "args": [
        "check:types",
        "-w"
      ],
      "problemMatcher": [
        "$tsc-watch"
      ],
      "label": "check:types (watch)"
    },
    {
      "type": "shell",
      "command": "pnpm",
      "args": [
        "test:workspace:lint"
      ],
      "problemMatcher": [
        "$eslint-stylish"
      ],
      "label": "Lint"
    },
    {
      "type": "shell",
      "command": "pnpm",
      "args": [
        "install"
      ],
      "group": "build",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      },
      "label": "npm: install"
    }
  ]
}
