{
  "files.exclude": {
    "node_modules": true,
    "tests/node_modules": true,
    "docs": true,
    "jest/environment.{d.ts,js,js.map}": true,
    "**/*.tsbuildinfo": true
  },
  "typescript.preferences.importModuleSpecifier": "project-relative",
  "jest.jestCommandLine": "node ./node_modules/jest/bin/jest.js",
  "npm.packageManager": "pnpm",
  "eslint.packageManager": "pnpm",
  // "jest.autoRun": {
  //   "watch": "test-file"
  // }
  "jest.autoRun": "off",
  "jest.nodeEnv": { "NODE_OPTIONS": "--experimental-vm-modules --no-warnings" },

  "javascript.preferences.importModuleSpecifierEnding": "index",
  "typescript.preferences.importModuleSpecifierEnding": "index"
}
