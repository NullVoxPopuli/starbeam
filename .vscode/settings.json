{
  "files.exclude": {
    "node_modules": true,
    "**/node_modules": true,
    "docs": true,
    "**/*.tsbuildinfo": true,
    "types": true,
    "**/dist": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/dist": true
  },

  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.js",
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
    "*.jsx": "${capture}.js",
    "*.tsx": "${capture}.ts",
    "tsconfig.json": "tsconfig.*.json",
    "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, pnpm-workspace.yaml, .npmrc, babel.config.json, .quokka, .swcrc, jest.config.json",
    ".eslintrc.*": ".eslintignore"
  },
  "explorer.fileNesting.enabled": true,

  "html.customData": ["./node_modules/documentary/web-components.json"],

  "typescript.preferences.importModuleSpecifier": "project-relative",
  "editor.semanticHighlighting.enabled": true,

  "npm.packageManager": "pnpm",
  "eslint.packageManager": "pnpm",
  // "jest.autoRun": {
  //   "watch": "test-file"
  // }
  "jest.enableCodeLens": true,
  "javascript.preferences.importModuleSpecifierEnding": "js",
  "typescript.preferences.importModuleSpecifierEnding": "js",
  "typescript.tsdk": "node_modules/typescript/lib",
  "quokka.codeAutoPlayDelay": 1000,
  "quokka.automaticRestart": true,
  "quokka.automaticStartRegex": "quokka\\.[tj]s$|quokka/*.[tjs]$",
  "quokka.compactMessageOutput": false,
  "quokka.darkTheme.log.decorationAttachmentRenderOptions": {
    "border": "2px dashed",
    "borderColor": "hsla(50, 20%, 20%, 0.5) transparent",
    "fontWeight": "500",
    "textDecoration": "none",
    "color": "#9996",
    "backgroundColor": "#2222229",
    "margin": "1rem"
  },
  "quokka.suppressGlyphMarginNotifications": false,
  "wycats.languageFeatures.semanticTokens": true,
  "wycats.dev.logLevel": "DEBUG",
  "wycats.dev.vlsPort": 8900,
  "wycats.trace.server": "messages",
  "[wycats-typescript].trace.server": "verbose",
  "jest.autoRun": "off",
  "jest.testExplorer": {
    "enabled": true
  },
  "jest.jestCommandLine": "node ./bootstrap/dist/run-jest.js",
  "jest.nodeEnv": {
    "NODE_OPTIONS": "--experimental-vm-modules --no-warnings"
  },
  "typescript.preferences.includePackageJsonAutoImports": "auto",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.tsserver.experimental.enableProjectDiagnostics": true
}
