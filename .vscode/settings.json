{
  "files.exclude": {
    "node_modules": true,
    "**/node_modules": true,
    "docs": true,
    "**/*.tsbuildinfo": true,
    "types": true,
    "**/dist": true
  },
  "files.autoSave": "onFocusChange",

  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/dist": true
  },

  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.js",
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
    "*.jsx": "${capture}.js",
    "*.tsx": "${capture}.ts",
    "tsconfig.json": "tsconfig.*.json",
    "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, pnpm-workspace.yaml, .npmrc, babel.config.json, .quokka, .swcrc, jest.config.json",
    ".eslintrc.*": ".eslintignore"
  },
  "explorer.fileNesting.enabled": true,

  "editor.formatOnSave": true,

  "editor.codeActionsOnSave": {
    "source.fixAll": true,
    "source.organizeImports": false
  },

  "[typescript]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },

  "html.customData": ["./node_modules/documentary/web-components.json"],

  "typescript.preferences.importModuleSpecifier": "project-relative",
  "editor.semanticHighlighting.enabled": true,

  "npm.packageManager": "pnpm",
  "eslint.packageManager": "yarn",
  "javascript.preferences.importModuleSpecifierEnding": "js",
  "typescript.preferences.importModuleSpecifierEnding": "js",
  "typescript.tsdk": "node_modules/typescript/lib",
  "quokka.codeAutoPlayDelay": 1000,
  "quokka.automaticRestart": true,
  "quokka.automaticStartRegex": "quokka\\.[tj]s$|quokka/*.[tjs]$",
  "quokka.compactMessageOutput": false,
  "quokka.darkTheme.log.decorationAttachmentRenderOptions": {
    "border": "2px dashed",
    "borderColor": "hsla(50, 20%, 20%, 0.5) transparent",
    "fontWeight": "500",
    "textDecoration": "none",
    "color": "#9996",
    "backgroundColor": "#2222229",
    "margin": "1rem"
  },
  "quokka.suppressGlyphMarginNotifications": false,
  "vitest.enable": true,
  "vitest.include": ["packages/*/tests/**/*.spec.ts"],
  "vitest.exclude": [
    "**/node_modules/**",
    "**/dist/**",
    "**/cypress/**",
    "**/.{idea,git,cache,output,temp}/**",
    "@starbeam/**"
  ],
  "typescript.preferences.includePackageJsonAutoImports": "auto",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.tsserver.experimental.enableProjectDiagnostics": true
}
