{
  "files.exclude": {
    "node_modules": true,
    "**/node_modules": true,
    "docs": true,
    "**/*.tsbuildinfo": true,
    "types": true
    // "**/dist": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/dist": true
  },
  "editor.codeActionsOnSave": {
    "source.organizeImports": true,
    "source.fixAll": false
  },
  "typescript.preferences.importModuleSpecifier": "project-relative",

  "npm.packageManager": "pnpm",
  "eslint.packageManager": "pnpm",
  // "jest.autoRun": {
  //   "watch": "test-file"
  // }

  "javascript.preferences.importModuleSpecifierEnding": "js",
  "typescript.preferences.importModuleSpecifierEnding": "js",
  "typescript.tsdk": "node_modules/typescript/lib",
  // "editor.bracketPairColorization.enabled": true,
  // "editor.guides.bracketPairs": "active",
  "quokka.codeAutoPlayDelay": 1000,
  "quokka.automaticRestart": true,
  "quokka.automaticStartRegex": "quokka\\.[tj]s$",
  "quokka.compactMessageOutput": false,
  "quokka.darkTheme.log.decorationAttachmentRenderOptions": {
    "border": "2px dashed",
    "borderColor": "hsla(50, 20%, 20%, 0.5) transparent",
    "fontWeight": "500",
    "textDecoration": "none",
    "color": "#9996",
    "backgroundColor": "#2222229",
    "margin": "1rem"
  },
  "quokka.suppressGlyphMarginNotifications": false,
  "wycats.languageFeatures.semanticTokens": true,
  "wycats.dev.logLevel": "DEBUG",
  "wycats.dev.vlsPort": 8900,
  "wycats.trace.server": "messages",
  "[wycats-typescript].trace.server": "verbose",
  "jest.debugMode": true,
  "jest.autoRun": "off",
  "jest.testExplorer": {
    "enabled": true
  },
  "jest.jestCommandLine": "node ./bootstrap/dist/run-jest.js",
  "jest.nodeEnv": {
    "NODE_OPTIONS": "--experimental-vm-modules --no-warnings"
  },
  "typescript.preferences.includePackageJsonAutoImports": "auto",
  "typescript.updateImportsOnFileMove.enabled": "always"
}
