{
  "files.exclude": {
    "node_modules": true,
    "**/node_modules": true,
    "docs": true,
    "**/*.tsbuildinfo": true,
    "**/dist": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/dist": true
  },
  "editor.codeActionsOnSave": {
    "source.organizeImports": true,
    "source.fixAll": false
  },
  "typescript.preferences.importModuleSpecifier": "project-relative",

  "jest.jestCommandLine": "node ./node_modules/jest/bin/jest.js",
  "npm.packageManager": "pnpm",
  "eslint.packageManager": "pnpm",
  // "jest.autoRun": {
  //   "watch": "test-file"
  // }
  "jest.autoRun": "off",
  "jest.nodeEnv": { "NODE_OPTIONS": "--experimental-vm-modules --no-warnings" },

  "javascript.preferences.importModuleSpecifierEnding": "js",
  "typescript.preferences.importModuleSpecifierEnding": "js",
  "typescript.tsdk": "node_modules/typescript/lib",
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "typescript.inlayHints.propertyDeclarationTypes.enabled": true,
  "typescript.inlayHints.variableTypes.enabled": true,
  "editor.fontFamily": "\"FiraCode NF Retina\"",
  "typescript.inlayHints.functionLikeReturnTypes.enabled": true,
  "typescript.inlayHints.parameterNames.enabled": "literals",
  "typescript.inlayHints.parameterTypes.enabled": true,
  "editor.inlayHints.fontSize": 11,
  "quokka.codeAutoPlayDelay": 500,
  "quokka.automaticRestart": true,
  "quokka.automaticStartRegex": "./examples/src/*.ts"
}
