{
  "root": true,
  "ignorePatterns": ["node_modules", "dist"],
  "plugins": ["@starbeam"],
  "overrides": [
    {
      "extends": ["plugin:@starbeam/commonjs"],
      "files": ["index.d.ts", "src/**/*.d.ts"],
      "parserOptions": {
        "project": "tsconfig.json"
      }
    },
    {
      "extends": ["plugin:@starbeam/json:recommended"],
      "files": ["*.json"]
    }
  ]
}
