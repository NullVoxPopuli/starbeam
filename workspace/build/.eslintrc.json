{
  "ignorePatterns": ["node_modules"],
  "overrides": [
    {
      "extends": ["plugin:@starbeam/esm"],
      "files": ["index.js", "src/**/*.js", "index.d.ts", "src/**/*.d.ts"],
      "parserOptions": {
        "project": "tsconfig.json"
      }
    },
    {
      "extends": ["plugin:@starbeam/json:recommended"],
      "files": ["*.json"]
    }
  ],
  "plugins": ["@starbeam"],
  "root": true
}
