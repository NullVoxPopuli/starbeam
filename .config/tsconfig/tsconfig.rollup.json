{
  "extends": "./tsconfig.-target.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "outDir": "./dist",
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowJs": true,
    "checkJs": true,
    "types": [
      "node",
      "magic-string",
      "@rollup/plugin-commonjs",
      "@rollup/plugin-node-resolve"
    ]
  },
  "include": [
    "../../rollup.config.mjs",
    "../../vite.config.ts",
    "../../packages/*/rollup.config.mjs",
    "../../framework/*/*/rollup.config.mjs"
  ]
}
