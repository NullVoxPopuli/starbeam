{
  "name": "starbeam",
  "version": "0.0.0",
  "module": "esm",
  "main": "src/index.ts",
  "workspaces": [
    ".",
    "@types/@domtree/*"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "serve": "vite preview",
    "test": "jest",
    "lint": "eslint .",
    "typecheck": "tsc -b",
    "typecheck:serve": "tsc -b -w --pretty false",
    "guides": "mdbook build -d ../docs guides"
  },
  "madge": {
    "detectiveOptions": {
      "es6": {
        "skipTypeImports": true
      }
    }
  },
  "devDependencies": {
    "@alex_neo/jest-expect-message": "^1.0.5",
    "@babel/core": "^7.16.7",
    "@babel/preset-env": "^7.16.8",
    "@babel/preset-typescript": "^7.16.7",
    "@domtree/any": "workspace:*",
    "@domtree/browser": "workspace:*",
    "@domtree/flavors": "workspace:*",
    "@domtree/interface": "workspace:*",
    "@domtree/minimal": "workspace:*",
    "@simple-dom/interface": "^1.4.0",
    "@simple-dom/parser": "^1.4.0",
    "@simple-dom/serializer": "^1.4.0",
    "@types/jest": "^27.4.0",
    "@types/jest-expect-message": "^1.0.3",
    "@types/jsdom": "^16.2.14",
    "@types/lodash.zip": "^4.2.6",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "babel-jest": "^27.4.6",
    "eslint": "^8.6.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.4",
    "jest": "^27.4.7",
    "jest-diff": "^27.4.6",
    "jsdom": "^19.0.0",
    "lodash.zip": "^4.2.0",
    "simple-dom": "^1.4.0",
    "simple-html-tokenizer": "^0.5.11",
    "typescript": "^4.5.4",
    "vite": "^2.7.12"
  },
  "dependencies": {
    "fast-array-diff": "^1.0.1"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "@alex_neo/jest-expect-message"
    ]
  }
}
