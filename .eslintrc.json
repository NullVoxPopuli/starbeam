{
  "root": true,

  "ignorePatterns": ["**/node_modules/**", "node_modules/**", "*.d.ts"],
  "settings": {
    "import/resolver": {
      "typescript": {}
    },
    "import/ignore": ["\\.js\\?script"]
  },
  "overrides": [
    {
      "files": [
        "./packages/**/*.{d.,}ts",
        "./framework/**/*.ts{x,}",
        "./@types/**/*.ts"
      ],
      "extends": ["./eslintrc.shared.json"],
      "excludedFiles": ["packages/x-devtool/**"],
      "parserOptions": {
        "sourceType": "module",
        "project": "./.config/tsconfig/tsconfig.packages.json"
      }
    },
    {
      "files": ["./packages/x-devtool/**/*.ts{x,}"],
      "extends": ["./eslintrc.shared.json"],
      "parserOptions": {
        "sourceType": "module",
        "project": "./.config/tsconfig/tsconfig.devtool.json"
      }
    },
    {
      "files": ["./demos/react*/**/*.ts{x,}"],
      "excludedFiles": ["./demos/*/vite.config.ts"],
      "extends": ["./eslintrc.shared.json"],
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
        "sourceType": "module",
        "project": "./.config/tsconfig/tsconfig.react-demos.json"
      }
    },
    {
      "files": ["./scripts/**/*.ts"],
      "extends": ["./eslintrc.shared.json"],
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
        "sourceType": "module",
        "project": "./.config/tsconfig/tsconfig.scripts.json"
      }
    },
    {
      "files": [
        "./rollup.config.mjs",
        "./packages/*/rollup.config.mjs",
        "./framework/*/*/rollup.config.mjs",
        "./vite.config.ts",
        "./demos/*/vite.config.ts"
      ],

      "extends": ["./eslintrc.shared.json"],
      "parserOptions": { "project": "./.config/tsconfig/tsconfig.rollup.json" }
    },
    {
      "files": ["./.build/**/*.{js,d.ts}"],
      "extends": ["./eslintrc.shared.json"],
      "parserOptions": { "project": "./.build/tsconfig.json" },
      "rules": {
        "@typescript-eslint/explicit-module-boundary-types": "off",
        "@typescript-eslint/no-explicit-any": "error"
      }
    }
  ]
}
