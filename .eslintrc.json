{
  "root": true,
  "ignorePatterns": ["jest/**/*.js", "notes/examples/**/*"],
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "settings": {
    "import/resolver": {
      "typescript": {
        "alwaysTryTypes": true
      }
    }
  },
  "extends": [
    "eslint:recommended",
    "plugin:import/recommended",
    "plugin:import/typescript",
    "plugin:@typescript-eslint/recommended"
  ],
  "rules": {
    "prefer-const": "off",
    "no-unused-vars": "off",
    "no-empty": "warn",
    "import/no-cycle": "warn",
    "import/no-self-import": "error",
    "import/no-restricted-paths": [
      "error",
      {
        "zones": [
          {
            "from": "./src/reactive/**",
            "target": "./src/core",
            "message": "don't import anything other than strippable or debug from core"
          },
          {
            "from": "./src",
            "target": "@starbeam/react",
            "message": "import from starbeam through the 'starbeam' module, not through a relative path"
          },
          {
            "from": "./src",
            "target": "./tests"
          },
          {
            "from": "./src",
            "target": "./src/api/public.ts"
          },
          {
            "target": "./src/!(index.ts)/**",
            "from": "./src/**/index.ts",
            "message": "Don't import from index.ts"
          }
        ]
      }
    ],
    "@typescript-eslint/no-unused-vars": [
      "warn",
      {
        "argsIgnorePattern": "^_"
      }
    ],
    "@typescript-eslint/ban-types": "off",
    "@typescript-eslint/no-explicit-any": [
      "error",
      {
        "ignoreRestArgs": true,
        "fixToUnknown": true
      }
    ]
  }
}
