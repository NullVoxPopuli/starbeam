{
  "root": true,

  "ignorePatterns": [
    "**/node_modules/**",
    "node_modules/**",
    "*.d.ts",
    "packages/x/devtools-extension/**"
  ],
  "settings": {
    "import/resolver": {
      "typescript": {}
    },
    "import/ignore": ["\\.js\\?script"]
  },
  "overrides": [
    {
      "files": ["./packages/*/*/**/*.{d.,}ts"],
      "extends": ["./eslintrc.shared.json"],
      "excludedFiles": [
        "packages/x/devtool/**",
        "packages/x/devtools-extension/**"
      ],
      "parserOptions": {
        "sourceType": "module",
        "project": "./packages/tsconfig.packages.json"
      }
    },
    {
      "files": ["./@types/**/*.ts"],
      "extends": ["./eslintrc.shared.json"],
      "parserOptions": {
        "sourceType": "module",
        "project": "./@types/tsconfig.json"
      }
    },
    {
      "files": ["./packages/x/devtool/**/*.ts{x,}"],
      "extends": ["./eslintrc.shared.json"],
      "parserOptions": {
        "sourceType": "module",
        "project": "./packages/x/devtool/tsconfig.json"
      }
    },
    {
      "files": ["./demos/react*/**/*.ts{x,}"],
      "excludedFiles": ["./demos/*/vite.config.ts"],
      "extends": ["./eslintrc.shared.json"],
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
        "sourceType": "module",
        "project": "./demos/tsconfig.react-demos.json"
      }
    },
    {
      "files": ["./scripts/**/*.ts"],
      "extends": ["./eslintrc.shared.json"],
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
        "sourceType": "module",
        "project": "./scripts/tsconfig.json"
      }
    },
    {
      "files": [
        "./rollup.config.mjs",
        "./packages/*/rollup.config.mjs",
        "./framework/*/*/rollup.config.mjs",
        "./vite.config.ts",
        "./demos/*/vite.config.ts"
      ],

      "extends": ["./eslintrc.shared.json"],
      "parserOptions": { "project": "./packages/tsconfig.rollup.json" }
    },
    {
      "files": ["./.build/**/*.{js,d.ts}"],
      "extends": ["./eslintrc.shared.json"],
      "parserOptions": { "project": "./.build/tsconfig.json" },
      "rules": {
        "@typescript-eslint/explicit-module-boundary-types": "off",
        "@typescript-eslint/no-explicit-any": "error"
      }
    },
    {
      "files": ["./rollup.config.mjs"],
      "extends": ["./eslintrc.shared.json"],
      "parserOptions": { "project": "./tsconfig.root.json" }
    }
  ]
}
