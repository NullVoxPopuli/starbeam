{
  "ignorePatterns": ["node_modules"],
  "overrides": [
    {
      "extends": ["plugin:@starbeam/commonjs"],
      "files": ["index.ts", "src/**/*.ts"],
      "parserOptions": {
        "project": "tsconfig.json"
      }
    },
    {
      "extends": ["plugin:@starbeam/json:recommended"],
      "files": ["*.json"]
    }
  ],
  "plugins": ["@starbeam"],
  "root": true
}
